<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_Unidad2_DiseñoApps_FAOG.MainPage">

    <StackLayout Padding="20">
        <Entry x:Name="Duracion" Placeholder="Duracion deejercicio" Keyboard="Numeric" Margin="20" />
        <Entry x:Name="Peso" Placeholder="Peso" Keyboard="Numeric" Margin="20" />

        <Button Text="Calcular" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand" CornerRadius="15" Margin="0,15,0,0" BackgroundColor="Aquamarine"/>
        <Label x:Name="resultado"  HorizontalOptions="CenterAndExpand"/>
        <Image Source="https://i.ibb.co/4dVVw81/bajo.png" IsVisible="false" x:Name="bajo"/>
        <Image Source="https://i.ibb.co/jGCgxM7/motivacion.png" IsVisible="false" x:Name="medio"/>
        <Image Source="https://i.ibb.co/fvKg9ZP/rendimiento.png" IsVisible="false" x:Name="alto"/>
    </StackLayout>

</ContentPage>
